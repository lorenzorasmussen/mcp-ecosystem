{
  "name": "mcp-documentation-orchestration",
  "version": "1.0.0",
  "description": "Advanced documentation orchestration system with GitHub Spec-Kit integration",
  "type": "module",
  "main": "scripts/documentation-sync.js",
  "scripts": {
    "start": "pm2 start ecosystem.config.js",
    "stop": "pm2 stop ecosystem.config.js",
    "restart": "pm2 restart ecosystem.config.js",
    "docs:sync": "node scripts/documentation-sync.js",
    "docs:health": "node scripts/documentation-health.js",
    "docs:validate": "node scripts/validate-specs.js",
    "docs:check": "npm run docs:health && npm run docs:validate",
    "docs:init": "node scripts/init-spec-kit.js",
    "docs:watch": "node scripts/watch-docs.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint scripts/ --ext .js",
    "lint:fix": "eslint scripts/ --ext .js --fix",
    "format": "prettier --write scripts/**/*.js",
    "build": "npm run lint && npm run test",
    "dev": "npm run docs:watch"
  },
  "keywords": [
    "documentation",
    "spec-kit",
    "mcp",
    "sync",
    "automation",
    "github"
  ],
  "author": "MCP Documentation Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.20.1",
    "@notionhq/client": "^2.2.15",
    "axios": "^1.12.2",
    "express": "^4.18.2",
    "googleapis": "^118.0.0",
    "pm2": "^6.0.13",
    "puppeteer": "^21.6.1",
    "ws": "^8.18.3",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "glob": "^10.3.10",
    "markdown-link-check": "^3.12.2",
    "markdownlint-cli": "^0.37.0",
    "semver": "^7.5.4",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mcp-ecosystem/documentation-orchestration.git"
  },
  "bugs": {
    "url": "https://github.com/mcp-ecosystem/documentation-orchestration/issues"
  },
  "homepage": "https://github.com/mcp-ecosystem/documentation-orchestration#readme"
}
