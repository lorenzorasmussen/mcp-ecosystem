# Todo Enforcement Configuration
# Set to 'true' to enable strict todo enforcement
TODO_ENFORCEMENT_STRICT=true

# Todo compliance threshold (percentage)
TODO_COMPLIANCE_THRESHOLD=80

# Auto-create todos for operations without existing todos
TODO_AUTO_CREATE=true

# Todo validation timeout (seconds)
TODO_VALIDATION_TIMEOUT=30

# Enable todo monitoring and reporting
TODO_MONITORING_ENABLED=true

# Todo compliance reporting interval (minutes)
TODO_REPORTING_INTERVAL=60

# Integration with MCP Client Bridge
MCP_BRIDGE_TODO_INTEGRATION=true

# Integration with Git hooks
GIT_HOOKS_TODO_VALIDATION=true

# Integration with CI/CD pipelines
CI_TODO_VALIDATION=true

# Todo storage configuration
TODO_STORAGE_PATH=.mcp-shared-knowledge/tasks/shared_tasks.json
TODO_BACKUP_ENABLED=true
TODO_BACKUP_INTERVAL=3600

# Todo templates configuration
TODO_TEMPLATES_ENABLED=true
TODO_TEMPLATES_PATH=scripts/todo-templates.json
TODO_CUSTOM_TEMPLATES_ENABLED=true

# Agent configuration
AGENT_TODO_REQUIRED=true
AGENT_TODO_TIMEOUT=300
AGENT_TODO_AUTO_PROGRESS=true

# Logging configuration
TODO_LOG_LEVEL=info
TODO_LOG_FILE=logs/todo-enforcement.log
TODO_METRICS_ENABLED=true